<div id="messages">
    <% if (locals.messages) { %>
        <% Object.keys(messages).forEach(function (type) { %>
            <% messages[type].forEach(function (message) { %>
                <div class="alert alert-dismissible alert-<%= type %>">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <%= message %>
                </div>
            <% }); %>
        <% }); %>
    <% } %>
</div>